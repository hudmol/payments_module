<%= render_aspace_partial :partial => "payments/template" %>

<% define_template "payment_summary", jsonmodel_definition(:payment_summary) do |form| %>
  <div class="subrecord-form-fields">
    <%= form.label_and_textfield('total_price') %>
    <%= form.label_and_select("currency", form.possible_options_for("currency", true)) %>
    <%= form.label_with_field("spend_category",
                              form.select('spend_category', form.possible_options_for('spend_category', true), {}),
                              :col_size => 9) %>
    <%= form.label_and_boolean "in_lot", {}, form.default_for("in_lot") %>

    <div class="subrecord-form-container">
      <%= render_aspace_partial :partial => "shared/subrecord_form", :locals => {:form => form, :name => "payments", :heading_size => "h5"} %>
    </div>
  </div>
<% end %>
